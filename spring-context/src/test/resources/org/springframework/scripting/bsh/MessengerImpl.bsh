import org.springframework.tests.sample.beans.BeanTests;
import org.springframework.scripting.TestBeanAwareMessenger;

public class MyMessenger implements TestBeanAwareMessenger {

	private String message;

	private BeanTests beanTest;

	private boolean active;

	public void init() {
		active = true;
	}

	public String getMessage() {
		if (!active && message != null) throw new java.lang.IllegalStateException();
		return message;
	}

	public void setMessage(String aMessage) {
		message = aMessage;
	}

	public BeanTests getTestBean() {
		return beanTest;
	}

	public void setTestBean(BeanTests tb) {
		beanTest = tb;
	}

	public void destroy() {
		message = null;
		active = false;
	}

}
